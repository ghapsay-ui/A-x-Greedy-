        const roadNetwork = {};
        for (const [key, value] of Object.entries(roadNetworkData)) {
            roadNetwork[key] = value;
        }

        const goal = "Taft (Pob.)";
        let map, markers = {}, polylines = [], animationLayers = [];
        let isAnimating = false;

        // populate start dropdown
        const startSelect = document.getElementById('startNode');
        Object.keys(barangays).sort().forEach(name => {
            if (name !== goal) {
                const option = document.createElement('option');
                option.value = name;
                option.textContent = name;
                startSelect.appendChild(option);
            }
        });

        function initMap() {
            map = L.map('map').setView([9.78, 125.50], 12);
            
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '¬© OpenStreetMap contributors'
            }).addTo(map);

            Object.keys(barangays).forEach(name => {
                const coords = barangays[name];
                const isGoal = name === goal;
                const color = isGoal ? 'green' : 'blue';
                const icon = createMarkerIcon(color, 15);
                
                const marker = L.marker([coords.lat, coords.lon], {icon: icon})
                    .bindPopup(`<b>${name}</b><br>SLD to Goal: ${heuristic[name].toFixed(3)} km`)
                    .addTo(map);
                markers[name] = marker;
            });

            Object.keys(roadNetwork).forEach(from => {
                roadNetwork[from].forEach(edge => {
                    const to = edge.neighbor;
                    const fromCoords = barangays[from];
                    const toCoords = barangays[to];
                    
                    L.polyline(
                        [[fromCoords.lat, fromCoords.lon], [toCoords.lat, toCoords.lon]],
                        {color: '#cccccc', weight: 1.5, opacity: 0.4}
                    ).addTo(map);
                });
            });

            // Build SLD legend list (sorted like the Romania table)
            const sldList = document.getElementById('sldList');
            const entries = Object.entries(heuristic).sort((a, b) => a[1] - b[1]);
            entries.forEach(([name, dist]) => {
                const row = document.createElement('div');
                row.className = 'sld-row';
                row.innerHTML = `<span>${name}</span><span>${dist.toFixed(2)} km</span>`;
                sldList.appendChild(row);
            });
        }

        function createMarkerIcon(color, size) {
            return L.divIcon({
                className: 'custom-marker',
                html: `<div style="background-color: ${color}; width: ${size}px; height: ${size}px; border-radius: 50%; border: 2px solid white; box-shadow: 0 2px 5px rgba(0,0,0,0.3);"></div>`,
                iconSize: [size, size]
            });
        }

        function createPulsingIcon(color, size) {
            return L.divIcon({
                className: 'custom-marker',
                html: `<div class="pulse-marker" style="background-color: ${color}; width: ${size}px; height: ${size}px; border-radius: 50%; border: 2px solid white; box-shadow: 0 2px 10px rgba(255,170,0,0.6);"></div>`,
                iconSize: [size, size]
            });
        }

        // Greedy Best-First Search (REFACTORED)
        function greedyBestFirstSearch(start) {
            const frontier = new MinHeap();
            frontier.push({node: start, path: [start], cost: 0, f: heuristic[start], parent: null});
            const visited = new Set();
            const expansions = [];

            while (!frontier.isEmpty()) {
                const {node: current, path, cost, f, parent} = frontier.pop();
                if (visited.has(current)) continue;
                
                expansions.push({
                    node: current,
                    f: f,
                    h: heuristic[current],
                    g: cost,
                    path: [...path],
                    parent: parent
                });
                visited.add(current);

                if (current === goal) {
                    return { success: true, path, cost, expansions };
                }

                if (roadNetwork[current]) {
                    roadNetwork[current].forEach(edge => {
                        if (!visited.has(edge.neighbor)) {
                            frontier.push({
                                node: edge.neighbor,
                                path: [...path, edge.neighbor],
                                // NOTE: cost (g-score) is tracked for visualization/metrics only.
                                // Priority queue sorts exclusively by f = h(n), so accumulated cost
                                // does NOT influence node expansion order in Greedy Best-First Search.
                                cost: cost + edge.distance,
                                f: heuristic[edge.neighbor],
                                parent: current
                            });
                        }
                    });
                }
            }

            return { success: false, path: null, cost: Infinity, expansions };
        }

        // A* Search (REFACTORED)
        function aStarSearch(start) {
            const frontier = new MinHeap();
            frontier.push({node: start, path: [start], cost: 0, f: heuristic[start], parent: null});
            const visited = new Set();
            const expansions = [];
            const bestCost = {[start]: 0};

            while (!frontier.isEmpty()) {
                const {node: current, path, cost, f, parent} = frontier.pop();
                if (visited.has(current)) continue;
                
                expansions.push({
                    node: current,
                    f: f,
                    g: cost,
                    h: heuristic[current],
                    path: [...path],
                    parent: parent
                });
                visited.add(current);

                if (current === goal) {
                    return { success: true, path, cost, expansions };
                }

                if (roadNetwork[current]) {
                    roadNetwork[current].forEach(edge => {
                        const newCost = cost + edge.distance;
                        // Explicit undefined check instead of relying on falsiness
                        if (!visited.has(edge.neighbor) &&
                            (bestCost[edge.neighbor] === undefined || newCost < bestCost[edge.neighbor])) {
                            bestCost[edge.neighbor] = newCost;
                            frontier.push({
                                node: edge.neighbor,
                                path: [...path, edge.neighbor],
                                cost: newCost,
                                f: newCost + heuristic[edge.neighbor],
                                parent: current
                            });
                        }
                    });
                }
            }

            return { success: false, path: null, cost: Infinity, expansions };
        }

        // Simple min-heap by f(n)
        class MinHeap {
            constructor() {
                this.heap = [];
            }

            push(item) {
                this.heap.push(item);
                this.bubbleUp(this.heap.length - 1);
            }

            pop() {
                if (this.heap.length === 0) return null;
                const min = this.heap[0];
                const end = this.heap.pop();
                if (this.heap.length > 0) {
                    this.heap[0] = end;
                    this.bubbleDown(0);
                }
                return min;
            }

            bubbleUp(index) {
                while (index > 0) {
                    const parentIndex = Math.floor((index - 1) / 2);
                    if (this.heap[index].f >= this.heap[parentIndex].f) break;
                    [this.heap[index], this.heap[parentIndex]] =
                        [this.heap[parentIndex], this.heap[index]];
                    index = parentIndex;
                }
            }

            bubbleDown(index) {
                const length = this.heap.length;
                while (true) {
                    let smallest = index;
                    const left = 2 * index + 1;
                    const right = 2 * index + 2;
                    if (left < length && this.heap[left].f < this.heap[smallest].f) {
                        smallest = left;
                    }
                    if (right < length && this.heap[right].f < this.heap[smallest].f) {
                        smallest = right;
                    }
                    if (smallest === index) break;
                    [this.heap[index], this.heap[smallest]] =
                        [this.heap[smallest], this.heap[index]];
                    index = smallest;
                }
            }

            isEmpty() {
                return this.heap.length === 0;
            }
        }

        async function animateSearch(algorithm, result, start, color) {
            const progressOverlay = document.getElementById('progressOverlay');
            const progressTitle = document.getElementById('progressTitle');
            const progressStep = document.getElementById('progressStep');
            const algorithmName = algorithm === 'greedy'
                ? 'Greedy Best-First Search'
                : 'A* Search';
            
            progressOverlay.classList.add('active');
            progressTitle.textContent = algorithmName;
            progressTitle.style.color = color;
            
            const expansionsDiv = document.getElementById(`${algorithm}Expansions`);
            let expansionHTML = '<h4 style="margin-bottom: 6px;">Expansion Order:</h4>';
            expansionsDiv.innerHTML = expansionHTML;
            markers[start].setIcon(createMarkerIcon('#ff4444', 20));

            for (let i = 0; i < result.expansions.length; i++) {
                const exp = result.expansions[i];
                
                progressStep.textContent =
                    `Exploring ${exp.node} (${i + 1}/${result.expansions.length})`;
                
                const expItem = document.createElement('div');
                expItem.className = 'expansion-item current';
                expItem.id = `exp-${algorithm}-${i}`;
                expItem.innerHTML = `
                    <strong>${i + 1}. ${exp.node}</strong><br>
                    f(n) = ${exp.f.toFixed(3)} |
                    ${algorithm === 'astar' ? `g(n) = ${exp.g.toFixed(2)} + ` : ''}
                    h(n) = ${exp.h.toFixed(3)}
                `;
                expansionsDiv.appendChild(expItem);
                expItem.scrollIntoView({behavior: 'smooth', block: 'nearest'});
                
                if (exp.node !== goal && exp.node !== start) {
                    markers[exp.node].setIcon(createPulsingIcon('#ffaa00', 20));
                }
                
                if (exp.parent) {
                    const fromCoords = barangays[exp.parent];
                    const toCoords = barangays[exp.node];
                    
                    const explorationLine = L.polyline(
                        [[fromCoords.lat, fromCoords.lon], [toCoords.lat, toCoords.lon]],
                        {
                            color: '#ffaa00',
                            weight: 3,
                            opacity: 0.7,
                            dashArray: '8, 8'
                        }
                    ).addTo(map);
                    
                    animationLayers.push(explorationLine);
                    
                    const pathEl = explorationLine.getElement();
                    if (pathEl) {
                        const length = pathEl.getTotalLength();
                        pathEl.style.strokeDasharray = `${length}`;
                        pathEl.style.strokeDashoffset = `${length}`;
                        setTimeout(() => {
                            pathEl.style.transition =
                                `stroke-dashoffset ${STEP_DELAY}ms linear`;
                            pathEl.style.strokeDashoffset = '0';
                        }, 50);
                    }
                }
                
                await sleep(STEP_DELAY);
                
                if (exp.node !== goal && exp.node !== start) {
                    markers[exp.node].setIcon(createMarkerIcon('#888888', 18));
                }
                
                if (animationLayers.length > 0) {
                    const lastLine = animationLayers[animationLayers.length - 1];
                    lastLine.setStyle({color: '#aaaaaa', opacity: 0.3});
                }
                
                document.getElementById(`exp-${algorithm}-${i}`)
                    .classList.remove('current');
            }

            if (result.success) {
                progressStep.textContent = 'Drawing final path...';
                
                for (let i = 0; i < result.path.length - 1; i++) {
                    const from = result.path[i];
                    const to = result.path[i + 1];
                    const fromCoords = barangays[from];
                    const toCoords = barangays[to];
                    const pathLine = L.polyline(
                        [[fromCoords.lat, fromCoords.lon], [toCoords.lat, toCoords.lon]],
                        {
                            color: color,
                            weight: 5,
                            opacity: 0.9,
                            dashArray: '12, 8'
                        }
                    ).addTo(map);
                    
                    const pathEl = pathLine.getElement();
                    if (pathEl) {
                        const length = pathEl.getTotalLength();
                        pathEl.style.strokeDasharray = `${length}`;
                        pathEl.style.strokeDashoffset = `${length}`;
                        setTimeout(() => {
                            pathEl.style.transition =
                                `stroke-dashoffset ${PATH_SEG_DELAY}ms ease-in-out`;
                            pathEl.style.strokeDashoffset = '0';
                        }, 50);
                    }
                    
                    polylines.push(pathLine);
                    await sleep(PATH_SEG_DELAY);
                }
                progressStep.textContent =
                    `‚úì Path found! Cost: ${result.cost.toFixed(2)} km`;
                await sleep(1000);
            }
            
            progressOverlay.classList.remove('active');
        }

        function sleep(ms) {
            return new Promise(resolve => setTimeout(resolve, ms));
        }

        async function runGreedy() {
            if (isAnimating) return;
            isAnimating = true;
            disableButtons(true);
            
            const start = document.getElementById('startNode').value;
            const result = greedyBestFirstSearch(start);
            
            document.getElementById('greedyResults').style.display = 'block';
            displayMetrics('greedy', result, start);
            
            await animateSearch('greedy', result, start, '#f5576c');
            
            isAnimating = false;
            disableButtons(false);
        }

        async function runAStar() {
            if (isAnimating) return;
            isAnimating = true;
            disableButtons(true);
            
            const start = document.getElementById('startNode').value;
            const result = aStarSearch(start);
            
            document.getElementById('astarResults').style.display = 'block';
            displayMetrics('astar', result, start);
            
            await animateSearch('astar', result, start, '#00f2fe');
            
            isAnimating = false;
            disableButtons(false);
        }

        function displayMetrics(algorithm, result, start) {
            const metricsDiv = document.getElementById(`${algorithm}Metrics`);
            metricsDiv.innerHTML = `
                <div class="metric">
                    <span class="metric-label">Start:</span>
                    <span class="metric-value">${start}</span>
                </div>
                <div class="metric">
                    <span class="metric-label">Goal:</span>
                    <span class="metric-value">${goal}</span>
                </div>
                <div class="metric">
                    <span class="metric-label">Success:</span>
                    <span class="metric-value">${result.success ? '‚úì Yes' : '‚úó No'}</span>
                </div>
                ${result.success ? `
                    <div class="metric">
                        <span class="metric-label">Path Length:</span>
                        <span class="metric-value">${result.path.length} barangays</span>
                    </div>
                    <div class="metric">
                        <span class="metric-label">Path Cost:</span>
                        <span class="metric-value">${result.cost.toFixed(2)} km</span>
                    </div>
                ` : ''}
                <div class="metric">
                    <span class="metric-label">Nodes Expanded:</span>
                    <span class="metric-value">${result.expansions.length}</span>
                </div>
            `;
        }

        function disableButtons(disabled) {
            document.getElementById('btnGreedy').disabled = disabled;
            document.getElementById('btnAstar').disabled = disabled;
            document.getElementById('startNode').disabled = disabled;
        }

        function resetVisualization() {
            if (isAnimating) return;
            
            animationLayers.forEach(layer => map.removeLayer(layer));
            animationLayers = [];
            
            polylines.forEach(p => map.removeLayer(p));
            polylines = [];

            document.getElementById('greedyResults').style.display = 'none';
            document.getElementById('astarResults').style.display = 'none';
            document.getElementById('progressOverlay').classList.remove('active');

            Object.keys(barangays).forEach(name => {
                const isGoal = name === goal;
                const color = isGoal ? 'green' : 'blue';
                markers[name].setIcon(createMarkerIcon(color, 15));
            });
        }

        window.onload = initMap;
    </script>
</body>
</html>
